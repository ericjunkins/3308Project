<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.lerrrrmps.myfirstapp.MainActivity"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <com.example.lerrrrmps.myfirstapp.ControlStickViewRight
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id ="@+id/JoystickRight"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="340dp"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000"
            android:layout_weight="1">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="7">

            <VideoView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_weight="7"
                android:id="@+id/myVideo" />

            <!---
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/darker_gray"/>
                -->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Socket Connect"
                android:id="@+id/SocketConnect"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/steering_amount"
                android:textSize="16dp"
                android:textColor="#FFF"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="0"
                android:layout_alignBaseline="@+id/SocketConnect"
                android:layout_alignBottom="@+id/SocketConnect"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:textSize="16dp"
                android:textColor="#FFF"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Velocity"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/textView3"
                android:layout_above="@+id/SocketConnect"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textSize="16dp"
                android:textColor="#FFF"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Steering %"
                android:id="@+id/textView4"
                android:layout_above="@+id/SocketConnect"
                android:layout_toRightOf="@+id/SocketConnect"
                android:layout_toEndOf="@+id/SocketConnect" />

            <TextView
                android:id="@+id/velocity_amount"
                android:textSize="16dp"
                android:textColor="#FFF"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="0"
                android:layout_alignBaseline="@+id/SocketConnect"
                android:layout_alignBottom="@+id/SocketConnect"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <com.example.lerrrrmps.myfirstapp.ControlStickViewRight
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id ="@+id/JoystickLeft"/>
    </LinearLayout>

</LinearLayout>









